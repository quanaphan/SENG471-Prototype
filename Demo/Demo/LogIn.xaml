        <TextBlock HorizontalAlignment="Left" Margin="228,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.71,-0.76"><Run Text="LOG-IN"/></TextBlock>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="185,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
