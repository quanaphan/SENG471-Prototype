        <TextBlock HorizontalAlignment="Left" Margin="185,57,0,0" TextWrapping="Wrap" Text="User Name" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="185,175,0,0" Text="Password"/>
